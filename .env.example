# Development Environment Configuration
# Copy this file to .env for local development

# Database Environment
DATABASE_ENV="local"

# Local Database (via Docker)
POSTGRES_HOST="db"
POSTGRES_PORT=5432
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DATABASE="postgres"
POSTGRES_SSL_MODE="disable"

# Local Redis/Celery (via Docker)
REDIS_URL="redis://broker:6379"
CELERY_BROKER_URL="redis://broker:6379/0"
CELERY_RESULT_BACKEND="redis://broker:6379/1"
DRAGONFLY_HOST="broker"
DRAGONFLY_PORT=6379

# Local Neo4j (via Docker)
NEO4J_URI="bolt://neo4j:7687"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="mem0graph"

# Local Storage
STORAGE_BACKEND="local"
LOCAL_PATH="/app/uploads"
LOCAL_BASE_URL="/files/"

# API Configuration
FASTAPI_HOST="0.0.0.0"
FASTAPI_PORT=8000
GRAPHRAG_LOG_LEVEL="debug"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4o-mini"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# General Configuration
ENVIRONMENT="development"
RUN_MIGRATIONS_ON_STARTUP=true
